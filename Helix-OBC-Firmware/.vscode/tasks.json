{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/main.cpp",
                "${fileDirname}/event.cpp",
                "${fileDirname}/leakCheck.cpp",
                "${fileDirname}/testThread.cpp",
                "${fileDirname}/eventTimer.cpp",
                "-o",
                "${fileDirname}/main.out",
                "-I${workspaceFolder}/../include",
                "-lboost_system",
                "-lboost_thread",
                "-lpthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}